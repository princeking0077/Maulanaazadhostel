{
  "name": "hostel-management-system",
  "productName": "Maulana Azad Hostel Management System",
  "private": true,
  "version": "2.2.0",
  "description": "Maulana Azad offline/online hostel management system with MySQL sync, multi-year records, PDF receipts, Excel import, Petty Cash, Receipt Register, Salary Statement, Admin Billing, IndexedDB + Hostinger MySQL storage",
  "author": {
    "name": "Hostel Management Team",
    "email": "test@test.com"
  },
  "homepage": "./",
  "main": "public/electron.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode production",
    "build-no-typecheck": "vite build --mode production",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "wait-on http://localhost:5173 && electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron-pack": "electron-builder",
    "preelectron-pack": "npm run build",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "@mui/system": "^7.3.5",
    "@mui/x-data-grid": "^8.18.0",
    "@mui/x-date-pickers": "^8.18.0",
    "@types/file-saver": "^2.0.7",
    "date-fns": "^4.1.0",
    "dexie": "^4.2.1",
    "dexie-export-import": "^4.1.4",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.2",
    "electron-builder": "^24.13.3",
    "electron-installer-windows": "^3.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^6.0.0",
    "wait-on": "^9.0.3"
  },
  "overrides": {
    "vite": "^6.0.0"
  },
  "build": {
    "appId": "com.hostelmanagement.app",
    "productName": "Maulana Azad Hostel Management System",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "public/electron.cjs",
      "public/preload.cjs",
      "node_modules/**/*",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "dist",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "public/assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "dir",
      "verifyUpdateCodeSignature": false,
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Maulana Azad Hostel Management"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
  }
}