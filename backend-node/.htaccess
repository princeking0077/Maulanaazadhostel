RewriteEngine On

# Redirect TRAFFIC to the Node.js App
# This is critical for Hostinger to know this is a Node App
RewriteRule ^$ http://127.0.0.1:3000/ [P,L]
RewriteRule ^(.*)$ http://127.0.0.1:3000/$1 [P,L]

# Alternative if above doesn't work (for some Hostinger setups)
# DirectoryIndex disabled
# RewriteRule ^(.*)$ dist/server.js [L]
